contacts = []

def add_contact():
    name = input("Enter Name: ")
    phone = input("Enter Phone Number: ")
    email = input("Enter Email: ")
    address = input("Enter Address: ")
    contacts.append({"name": name, "phone": phone, "email": email, "address": address})
    print("\nâœ… Contact added successfully!\n")

def view_contacts():
    if not contacts:
        print("\nâ— No contacts found.\n")
        return
    print("\n--- Contact List ---")
    for i, c in enumerate(contacts, 1):
        print(f"{i}. {c['name']}  |  {c['phone']}")
    print()

def search_contact():
    key = input("Enter name or phone number to search: ")
    for c in contacts:
        if c["name"] == key or c["phone"] == key:
            print("\nâœ… Contact Found!")
            print(c)
            return
    print("âŒ Contact not found!\n")

def update_contact():
    phone = input("Enter phone number of contact to update: ")
    for c in contacts:
        if c["phone"] == phone:
            print("\nEnter new details (leave blank to keep old value)")
            c["name"] = input("New Name: ") or c["name"]
            c["phone"] = input("New Phone: ") or c["phone"]
            c["email"] = input("New Email: ") or c["email"]
            c["address"] = input("New Address: ") or c["address"]
            print("\nâœ… Contact updated successfully!\n")
            return
    print("âŒ Contact not found!\n")

def delete_contact():
    phone = input("Enter phone number to delete: ")
    for c in contacts:
        if c["phone"] == phone:
            contacts.remove(c)
            print("\nğŸ—‘ Contact deleted successfully!\n")
            return
    print("âŒ Contact not found!\n")


# ----- MAIN MENU -----
while True:
    print("====== ğŸ“’ CONTACT BOOK MENU ======")
    print("1. Add Contact")
    print("2. View Contacts")
    print("3. Search Contact")
    print("4. Update Contact")
    print("5. Delete Contact")
    print("6. Exit")

    choice = input("Enter your choice: ")

    if choice == "1":
        add_contact()
    elif choice == "2":
        view_contacts()
    elif choice == "3":
        search_contact()
    elif choice == "4":
        update_contact()
    elif choice == "5":
        delete_contact()
    elif choice == "6":
        print("\nğŸ‘‹ Exiting Contact Book. Goodbye!")
        break
    else:
        print("\nâŒ Invalid choice! Please try again.\n")
